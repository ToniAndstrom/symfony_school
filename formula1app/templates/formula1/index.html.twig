{% extends 'base.html.twig' %}

{% block title %}Formula 1 races in 2024
{% endblock %}

{% block body %}


	<h1>F1 Races in 2024</h1>
	{% for data in data.MRData.RaceTable.Races %}

		<li>
			<div class="card">
				<a href="{{data.url}}">{{data.raceName|e}}</a>
				<br>
				<p>Circuit:
					{{data.Circuit.circuitName}}</p>
				<br>
				<p>Location:
					{{data.Circuit.Location.locality}},
					{{data.Circuit.Location.country}}
				</p><br>
				<p>Date:
					{{data.date}}</p>
                    <img class="photo" src="formula1.jpg" alt="a picture of a formula1 card">
				
			</div>
		</li>


	{% endfor %}

{% endblock %}
